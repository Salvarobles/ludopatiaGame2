{% extends 'base.html.twig' %}

{% block title %}Hello MainController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		{% if is_granted('ROLE_USER') %}
			<h1>Bienvenido usuario:
				{{ app.user.username }}</h1>
			<a href="/sorteo/show">Ver Sorteos</a>
		{% else %}
			<p>No tienes permisos para ver este contenido.</p>
		{% endif %}
	</div>
{% endblock %}
